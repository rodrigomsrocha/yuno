{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["src"]
}
